      // Function to display popular drinks
      function displayPopularDrinks(popularDrinkNames) {
        if (!popularDrinkNames || popularDrinkNames.length === 0) {
          section.style.display = 'none';
          return;
        }

        // Wait a bit to ensure all drink cards are rendered
        setTimeout(() => {
          const allDrinks = getAllDrinks();
          const popularDrinks = allDrinks.filter(drink => 
            popularDrinkNames.includes(drink.name)
          );

          if (popularDrinks.length === 0) {
            section.style.display = 'none';
            return;
          }

          // Sort by popularity order (maintain the order from API)
          const sortedPopularDrinks = popularDrinkNames
            .map(name => popularDrinks.find(d => d.name === name))
            .filter(d => d !== undefined);

          // Display only the most popular drink
          const displayDrink = sortedPopularDrinks[0];
          if (!displayDrink) {
            section.style.display = 'none';
            return;
          }
          
          grid.innerHTML = '';
          const card = displayDrink.element.cloneNode(true);
          card.classList.add('popular-drink-card');
          card.style.cursor = 'pointer';
          
          // Add click handler to trigger the original card's click
          card.addEventListener('click', (e) => {
            e.stopPropagation();
            const drinkName = card.getAttribute('data-drink');
            const originalCard = document.querySelector(`.drink-card[data-drink="${drinkName}"]:not(.recommended-drink-card):not(.popular-drink-card)`);
            if (originalCard) {
              originalCard.click();
            }
          });
          
          grid.appendChild(card);

          section.style.display = 'block';

          // Translate the newly added content if page is in Spanish
          const lang = window.pageLang || (window.shouldTranslateToSpanish && window.shouldTranslateToSpanish() ? 'es' : 'en') || sessionStorage.getItem('vamsa_page_language') || 'en';
